/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  /* margin-top: 40rpx; */
  padding-left: 60rpx;
  padding-right: 60rpx;
  height: 140rpx;
  width: 750rpx;
  box-sizing: border-box;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}

.openid-wrapper {
  flex: 1;
  margin-left: 30rpx;
}

.openid {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}

.openid-name{
  flex:1;
  margin-right: 10px;
  color: #999999;
}
.openid-id{
  word-break: break-all;
}

.box-container {
  flex: 1;
  display: flex;
  width: 690rpx;
  margin: 60rpx 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-betweens;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
}

.box {
  width: 230rpx;
  height: 230rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #f6f6f6;
  border-bottom: 1px solid #f6f6f6;
}
.no-border-right {
  border-right-width: 0px;
}

.box-text {
  color: #333;
  font-size: 36rpx;
}